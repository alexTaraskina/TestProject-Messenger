{
  "scripts": {
    "dev": "webpack serve",
    "build": "webpack",
    "stylelint": "stylelint '**/*{.css,.scss}'",
    "stylelint:fix": "stylelint '**/*{.css,.scss}' --fix",
    "test": "env TS_NODE_PROJECT=\".mocharc.json\" mocha -r ts-node/register -r tsconfig-paths/register --r ./mochaSetup.js './src/**/*.test.ts'"
  },
  "alias": {
    "core": "./src/core",
    "pages": "./src/pages",
    "helpers": "./src/helpers",
    "partials": "./src/partials",
    "store": "./src/store",
    "utils": "./src/utils",
    "api": "./src/api",
    "services": "./src/services"
  },
  "copyStaticFiles": [
    {
      "from": "./static/assets/icons/*",
      "to": "dist/icons"
    }
  ],
  "devDependencies": {
    "@parcel/transformer-inline-string": "2.8.1",
    "@types/mocha": "10.0.1",
    "@types/node": "18.11.18",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "chai": "4.3.7",
    "css-loader": "6.7.3",
    "eslint": "8.30.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "jsdom": "21.1.1",
    "mocha": "10.2.0",
    "parcel": "2.8.1",
    "parcel-reporter-copy-file-v2": "1.0.1",
    "postcss-color-rgba-fallback": "4.0.0",
    "postcss-import": "15.0.1",
    "postcss-loader": "7.1.0",
    "postcss-nested": "6.0.0",
    "postcss-simple-vars": "7.0.1",
    "raw-loader": "4.0.2",
    "sinon": "15.0.3",
    "style-loader": "3.3.2",
    "stylelint": "14.16.1",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-scss": "4.3.0",
    "stylelint-selector-bem-pattern": "2.1.1",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "tsconfig-paths-webpack-plugin": "4.0.1",
    "typescript": "4.9.4",
    "webpack": "5.76.3",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.13.1"
  },
  "dependencies": {
    "@types/chai": "4.3.4",
    "express": "4.18.2",
    "handlebars": "4.7.7",
    "nanoid": "4.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browser": {
    "crypto": false
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": ">= 50%"
      }
    }
  }
}
