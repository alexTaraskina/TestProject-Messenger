<div class="password-edit">
    {{{ Avatar }}}
    <form class="form form_type_profile" id="profile-form" name="profile-form">
        <div class="form__top-content">
            {{{ FormInputGroup
                type="password" name="oldPassword"
                ref="oldPasswordInputGroup"
                placeholder="Старый пароль"
                cssModificator="form__input-group"
                validationType="password" }}}
            {{{ FormInputGroup
                type="password" name="newPassword"
                ref="newPasswordInputGroup"
                placeholder="Новый пароль"
                cssModificator="form__input-group"
                validationType="password" }}}
        </div>
        <div class="form__bottom-content">
            <div class="form__button-wrapper">
                {{{ Button heading="Сохранить" onClick=events.submit }}}
            </div>
        </div>
        <p class="password-update-error">{{{store.state.changePasswordError}}}</p>
        <p class="password-update-message">{{{store.state.changePasswordMessage}}}</p>
    </form>
</div>
