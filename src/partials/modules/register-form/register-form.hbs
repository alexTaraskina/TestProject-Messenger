<form class="form form_type_register">
    <div class="form__top-content">
        <h1 class="form__heading">Регистрация</h1>
        {{> "components/form-input-group/form-input-group" type="email" name="email" placeholder="Почта" cssModificator="form__input-group" }}
        {{> "components/form-input-group/form-input-group" type="text" name="login" placeholder="Логин" cssModificator="form__input-group" }}
        {{> "components/form-input-group/form-input-group" type="text" name="first_name" placeholder="Имя" cssModificator="form__input-group" }}
        {{> "components/form-input-group/form-input-group" type="text" name="second_name" placeholder="Фамилия" cssModificator="form__input-group" }}
        {{> "components/form-input-group/form-input-group" type="tel" name="phone" placeholder="Телефон" cssModificator="form__input-group" }}
        {{> "components/form-input-group/form-input-group" type="password" name="password" placeholder="Пароль" cssModificator="form__input-group" }}
        {{> "components/form-input-group/form-input-group" type="password" name="password_repeat" placeholder="Пароль (ещё раз)" cssModificator="form__input-group" }}
    </div>
    <div class="form__bottom-content">
        <div class="form__button-wrapper">
            {{> "components/button/button" heading="Зарегистрироваться"}}
        </div>
        {{> "components/link/link" class="form__link" linkText="Войти" href="#" }}
    </div>
</form>
