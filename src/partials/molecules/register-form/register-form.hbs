<form class="form form_type_register">
    <div class="form__top-content">
        <h1 class="form__heading">Регистрация</h1>
        <input class="form__input" type="email" id="email" name="email" placeholder="Почта" />
        <input class="form__input" type="text" id="login" name="login" placeholder="Логин" />
        <input class="form__input" type="text" id="first_name" name="first_name" placeholder="Имя" />
        <input class="form__input" type="text" id="second_name" name="second_name" placeholder="Фамилия" />
        <input class="form__input" type="tel" id="phone" name="phone" placeholder="Телефон" />
        <input class="form__input" type="password" id="password" name="password" placeholder="Пароль" />
        <input class="form__input" type="password" id="password_repeat" name="password_repeat" placeholder="Пароль (ещё раз)" />
    </div>
    <div class="form__bottom-content">
        <div class="form__button-wrapper">
            {{> "atoms/button/button" heading="Зарегистрироваться"}}
        </div>
        {{> "atoms/link/link" class="form__link" linkText="Войти" href="#" }}
    </div>
</form>